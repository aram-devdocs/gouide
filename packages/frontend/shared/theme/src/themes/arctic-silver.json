{
  "meta": {
    "id": "arctic-silver",
    "name": "Arctic Silver",
    "version": "1.0.0",
    "author": "Gouide Team",
    "mode": "light",
    "description": "Clean, airy light theme inspired by MacBook Air Silver"
  },
  "colors": {
    "bg": {
      "primary": "#f5f5f7",
      "secondary": "#e8e8ed",
      "tertiary": "#d1d1d6",
      "hover": "#c7c7cc",
      "active": "#aeaeb2"
    },
    "fg": {
      "primary": "#1d1d1f",
      "secondary": "#3a3a3c",
      "muted": "#6e6e73",
      "inverse": "#f5f5f7"
    },
    "accent": "#0071e3",
    "border": "#d1d1d6",
    "error": "#d70015",
    "success": "#248a3d",
    "warning": "#bf5000",
    "info": "#0077cc",
    "glass": {
      "tint": "#ffffff",
      "highlight": "#f5f5f7",
      "shadow": "#1d1d1f"
    }
  },
  "glass": {
    "blur": {
      "none": 0,
      "sm": 6,
      "md": 12,
      "lg": 20,
      "xl": 32
    },
    "opacity": {
      "transparent": 0,
      "light": 0.3,
      "medium": 0.6,
      "heavy": 0.8,
      "opaque": 0.98
    },
    "borderOpacity": {
      "none": 0,
      "subtle": 0.15,
      "visible": 0.3,
      "strong": 0.45
    }
  },
  "animation": {
    "duration": {
      "instant": 0,
      "fast": 120,
      "normal": 200,
      "slow": 300,
      "slower": 450
    },
    "easing": {
      "linear": "linear",
      "easeIn": "cubic-bezier(0.42, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.58, 1)",
      "easeInOut": "cubic-bezier(0.42, 0, 0.58, 1)",
      "spring": "cubic-bezier(0.28, 0.84, 0.42, 1)"
    }
  },
  "breakpoints": {
    "sm": 640,
    "md": 768,
    "lg": 1024,
    "xl": 1280,
    "xxl": 1536
  },
  "shadows": {
    "none": "none",
    "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
    "md": "0 4px 8px -2px rgba(0, 0, 0, 0.15)",
    "lg": "0 12px 20px -4px rgba(0, 0, 0, 0.2)",
    "xl": "0 24px 32px -8px rgba(0, 0, 0, 0.25)",
    "glass": "0 8px 32px 0 rgba(0, 113, 227, 0.08)"
  }
}
