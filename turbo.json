{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "validate:architecture": {
      "dependsOn": [],
      "cache": true,
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "../../scripts/validate-ui-architecture.sh",
        "../../scripts/validators/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build", "codegen", "validate:architecture"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen", "validate:architecture"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**", "*.config.*"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "^build"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "*.config.*"]
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "cache": true,
      "outputs": ["src/generated/**"],
      "inputs": ["../../protocol/**/*.proto"]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.stories.tsx", ".storybook/**"]
    },
    "validate:stories": {
      "dependsOn": [],
      "cache": true,
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.stories.tsx",
        "../../scripts/validators/validate-story-files.sh"
      ]
    }
  }
}
